{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "incremental": false,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es2020", "dom"],
    "module": "es2020",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "target": "ES2020",
    "moduleResolution": "bundler"
  },
  "include": ["src/**/*", "package.json"]
}
